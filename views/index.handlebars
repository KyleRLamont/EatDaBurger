<h1>Eat Da Burger!!!</h1>
<img src="/assets/images/burger.png"><br>

<div class="container clearfix">
    {{#each burger}}
    {{#unless devoured}}
    {{> burger-block devoured=false}}
    {{/unless}}
    {{/each}}
</div>
<div class="container clearfix">
    {{#each burger}}
    {{#if devoured}}
    <div class="burgerseaten">
        {{burger_name}}
    </div>
    {{/if}}
    {{/each}}
</div>

<br><br>

<form class="create-form">

    <div class="form-group">
        <label for="burger"></label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Submit</button>
</form>
<h2>Enter a burger you want to eat.</h2>