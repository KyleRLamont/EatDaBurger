<h1>Eat Da Burger!!!</h1>

<ul>
    {{#each burger}}
    {{#unless devoured}}
    {{> burger-block devoured=false}}
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burger}}
    {{#if devoured}}
    <li>
    {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>


<form class="create-form">

    <div class="form-group">
        <label for="burger"></label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Submit</button>
</form>
<h2>Enter a burger you want to eat.</h2>